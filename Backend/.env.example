# ===================================================
# PSPManager Auth API — Production Environment
# ===================================================
# NEVER commit actual values. Copy to .env and fill in.

NODE_ENV=production
PORT=5000

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/pspmanager

# JWT Secrets — generate with: openssl rand -base64 64
JWT_ACCESS_SECRET=your_secreate_key
JWT_REFRESH_SECRET=your_secreate_key

# Token expiry
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# bcrypt cost factor (12 = ~300ms on modern hardware, good for fintech)
BCRYPT_ROUNDS=12

# Cookie domain — set to your root domain (e.g., pspmanager.com)
COOKIE_DOMAIN=localhost

# Frontend URL — used for CORS allow-list
FRONTEND_URL=http://localhost:3000

# Account lockout config
MAX_FAILED_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Super Admin Details
SUPER_ADMIN_EMAIL=superadmin@cashlabs.com
SUPER_ADMIN_PASSWORD=CashLabsSuperAdmin@2026

# Email configuration
SENDGRID_API_KEY=Send_GRID_API_KEY
EMAIL_FROM=SEND_GRID_EMAIL